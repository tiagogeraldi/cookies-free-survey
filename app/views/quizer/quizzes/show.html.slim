.btn-group.mb-2
  - if @quiz.questions.count == 0
    = link_to 'Add a question', new_quizer_quiz_question_path(@quiz),
      class: 'btn btn-primary'
  - else
    = link_to quizer_quiz_questions_url(@quiz), class: 'btn btn-primary' do
      | Quiz questions &nbsp
      span.badge.text-bg-light = @quiz.questions.count

  = link_to "Results", quizer_quiz_results_path(@quiz), class: 'btn btn-success'
  = link_to "Export data", quizer_quiz_exports_path(@quiz), class: 'btn btn-secondary'

  = button_to "Clone survey", clone_quizer_quiz_path(@quiz),
    class: 'btn btn-secondary',
    method: :post,
    data: { turbo_confirm: 'This action is going to create a new survey cloning your current questions and alternatives. Do you want to continue?' }

.row
  .col-md-6.col-sm-12.mt-2
    .card
      .card-header Owner link
      .card-body
        p Save this link to return to this page and edit the quiz or go to the results:
        .input-group.mb-3
          = text_field_tag 'owner-link', url_for([@quiz, { only_path: false }]), readonly: true, class: 'form-control'
          span.input-group-text
            = link_to 'Copy', '#', class: 'clipboard', data: { clipboard_target: '#owner-link' }
  .col-md-6.col-sm-12.mt-2
    .card
      .card-header Audience Link
      .card-body
        p When finished creating your questions, send this link to your audience:
        .input-group.mb-3
          = text_field_tag 'audience-link', quizer_answers_url(s: @quiz.audience_secret,
            only_path: false), readonly: true, class: 'form-control'
          span.input-group-text
            = link_to 'Copy', '#', class: 'clipboard', data: { clipboard_target: '#audience-link' }

= render @quiz

p.mt-5
  = button_to "Delete quiz", @quiz,
    method: :delete,
    class: 'btn btn-danger btn-sm',
    data: { turbo_confirm: 'Are you sure you want to delete this quiz?' }
